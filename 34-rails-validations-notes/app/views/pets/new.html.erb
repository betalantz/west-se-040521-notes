<h1>Add a new pet!</h1>

<% if @pet.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@pet.errors.count, "error") %> prohibited this pet from being saved:</h2>

    <ul>
      <% @pet.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @pet do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :species %>
    <%= f.text_field :species %>
    <%= f.label :year_of_birth %>
    <%= f.text_field :year_of_birth %>
    <%= f.label :good_with_kids, "Is good with kids: " %>
    <%= f.radio_button :good_with_kids, "true" %>
    <%= f.label :good_with_kids, "Is terrible with kids: " %>
    <%= f.radio_button :good_with_kids, "false" %>
    <%= f.submit %>
<% end %>